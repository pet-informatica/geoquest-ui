<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8" >

    <RelativeLayout
        android:id="@+id/UserInfosBadges"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="3.75"
        android:background="@color/orange"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="0dp">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                >

                <ImageView
                    android:id="@+id/userBadgesImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/asset_avatar" />

                <ImageView
                    android:id="@+id/userBadgesImgBorda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/asset_borda" />

            </RelativeLayout>

            <TextView
                android:id="@+id/descUserBadges"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="0dp"
                android:text="Especialista em Hidrografia"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/linearLayoutStarsBadges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/star1Badges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_full" />

                <ImageView
                    android:id="@+id/star2Badges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_full" />

                <ImageView
                    android:id="@+id/star3Badges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_full" />

                <ImageView
                    android:id="@+id/star4Badges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_full" />

                <ImageView
                    android:id="@+id/star5Badges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="0dp"
        android:gravity="bottom"
        android:layout_marginTop="0dp"
        android:layout_weight="4.06">

        <LinearLayout
            android:id="@+id/titleBadges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BADGES"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_star_badges"
            android:id="@+id/imageView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_star_badges"
            android:id="@+id/imageView2"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewBadges"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

    </RelativeLayout>

</LinearLayout>