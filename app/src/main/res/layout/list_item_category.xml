<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="110dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="-3dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/category_description"
            android:textColor="@color/abc_primary_text_material_light"
            android:textSize="12sp"
            android:minLines="3"
            android:text="ola ola ola ola ola ola ola ola ola ola ola ola ola"
            android:layout_below="@+id/question_number"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/question_number"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Nome"
            android:minLines="1"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:layout_alignEnd="@+id/category_description"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="Jogar"
            android:id="@+id/buttonPlay"
            android:background="@color/background_material_light"
            android:textStyle="bold"
            android:layout_alignWithParentIfMissing="false"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/progressCategoria"
            android:layout_marginStart="27dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressCategoria"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:background="@color/grey"
            android:max="100"
            android:progress="45"
            android:layout_above="@+id/category_description"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>