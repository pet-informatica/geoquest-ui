<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="example.b.MainActivity$PlaceholderFragment" >

    <ImageView 
        android:id="@+id/searchImageRaking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_search"
        android:contentDescription="@string/All"/>
    
    <EditText
        android:id="@+id/searchRaking"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/searchImageRaking"
        android:layout_toRightOf="@id/searchImageRaking"
        android:imeOptions="actionSend"
        android:inputType="textPersonName"
        android:hint="@string/searchEmptyInput"
        android:maxLines="1"
        android:textColor="#ffffff" />

    <ListView
        android:id="@+id/listViewRaking"
        android:layout_below="@id/searchRaking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
</RelativeLayout>
