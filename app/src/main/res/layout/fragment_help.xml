<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/lightgrey"
    tools:context="example.b.HelpFragment" >

    <Button
        android:id="@+id/aboutGeoquest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:background="@drawable/div_down"
        android:text="Sobre" />

    <TextView
        android:id="@+id/aboutGeoquestText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:lineSpacingMultiplier="1.2"
        android:background="@color/white"
        android:text="O Geoquest é um aplicativo educacional sem fins lucrativos desenvolvido pelo PET-Informática em parceria com o PET-Geografia, ambos da Universidade Federal de Pernambuco (UFPE)"/>

    <Button
        android:id="@+id/howWorks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:background="@drawable/div_down"
        android:text="Como funciona?" />

    <TextView
        android:id="@+id/howWorkstText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:lineSpacingMultiplier="1.2"
        android:background="@color/white"
        android:text="O jogo consiste num conjunto de perguntas a serem respondidas de acordo com os seus conhecimentos em geografia. Você pode conquistar badges e até mesmo comparar seu desempenho com os seus amigos!"/>

    <Button
        android:id="@+id/ReportProblems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:background="@drawable/div_down"
        android:text="Problemas?" />

    <TextView
        android:id="@+id/reportProblemsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:lineSpacingMultiplier="1.2"
        android:background="@color/white"
        android:text="Se você teve qualquer problema durante a instalação ou uso do aplicativo entre em contato através do e-mail: petinformatica-l@cin.ufpe.br."/>

</LinearLayout>
